<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="320sp"
    android:layout_weight="2"
    android:background="#F7F2F2"
    android:padding="8sp"
    tools:context=".activity.Babarege">

    <androidx.cardview.widget.CardView
        android:layout_width="0sp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginRight="5sp">

        <LinearLayout
            android:id="@+id/layout_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_gravity="center"
                android:src="@drawable/cocacola"/>

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coca colo"
                android:layout_marginLeft="5sp"
                android:textSize="20sp"
                android:layout_marginTop="5sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/product_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[ 500 ml ]"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/product_prize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="৳ 30"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp">

                <TextView
                    android:id="@+id/add_to_bag_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="add to bag"
                    android:layout_marginLeft="5sp"
                    android:layout_marginBottom="5sp"
                    android:textColor="@color/red_bg"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"/>

                <ImageButton
                    android:id="@+id/add_to_bag_count_dec"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/ic_remove"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/cart_button_corner"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="5sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/product_item_count"
                    android:layout_width="30sp"
                    android:layout_height="match_parent"
                    android:text="10"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingBottom="5sp"
                    android:layout_alignBaseline="@id/add_to_bag_count_dec"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/add_to_bag_count_incre"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/ic_add"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="5sp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/cart_button_corner"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10sp" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0sp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp">

        <LinearLayout
            android:id="@+id/layout_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_image2"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_gravity="center"
                android:src="@drawable/pepsi"/>

            <TextView
                android:id="@+id/product_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pepsi"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5sp"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/product_size2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[ 500 ml ]"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/product_prize2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="৳ 35"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5sp"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp">

                <TextView
                    android:id="@+id/add_to_bag_count_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="add to bag"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="5sp"
                    android:textColor="@color/red_bg"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true" />

                <ImageButton
                    android:id="@+id/add_to_bag_count_dec2"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/ic_remove"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/cart_button_corner"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="5sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/product_item_count2"
                    android:layout_width="30sp"
                    android:layout_height="match_parent"
                    android:text="10"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingBottom="5sp"
                    android:layout_alignBaseline="@id/add_to_bag_count_dec2"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/add_to_bag_count_incre2"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/ic_add"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="5sp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/cart_button_corner"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10sp" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>