<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Loged.Register"
    android:orientation="vertical"
    android:background="@color/backgroundWhite"
    android:padding="10sp"
    android:gravity="center"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/splash_imageview"
            android:layout_width="120sp"
            android:layout_height="120dp"
            android:src="@drawable/launchinglogo"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="300sp"
            android:layout_height="40sp"
            app:cardCornerRadius="10sp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="20sp">

            <EditText
                android:id="@+id/edName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="name"
                android:singleLine="true"
                android:maxLines="1"
                android:paddingStart="15sp"
                android:paddingEnd="0sp"
                android:textSize="14sp"
                android:background="@drawable/cart_button_corner_white"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="300sp"
            android:layout_height="40sp"
            app:cardCornerRadius="10sp"
            android:layout_marginTop="10sp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="20sp">

            <EditText
                android:id="@+id/edPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="01717722665"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true"
                android:maxLines="1"
                android:paddingStart="15sp"
                android:paddingEnd="0sp"
                android:textSize="14sp"
                android:background="@drawable/cart_button_corner_white"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="300sp"
            android:layout_height="40sp"
            app:cardCornerRadius="10sp"
            android:layout_marginTop="10sp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="20sp">

            <EditText
                android:id="@+id/edPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="paasword"
                android:inputType="textPassword"
                android:singleLine="true"
                android:maxLines="1"
                android:paddingStart="15sp"
                android:paddingEnd="0sp"
                android:textSize="14sp"
                android:background="@drawable/cart_button_corner_white"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="300sp"
            android:layout_height="40sp"
            app:cardCornerRadius="10sp"
            android:layout_marginTop="10sp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="20sp">

            <EditText
                android:id="@+id/edConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="confirm password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:maxLines="1"
                android:paddingStart="15sp"
                android:paddingEnd="0sp"
                android:textSize="14sp"
                android:background="@drawable/cart_button_corner_white"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="150sp"
            android:layout_height="40sp"
            app:cardCornerRadius="20sp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="20sp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="register"
                android:background="@drawable/button_corner_white"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/i_have_already_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i have already account"
            android:textColor="@color/red_bg"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"/>

    </LinearLayout>

</LinearLayout>